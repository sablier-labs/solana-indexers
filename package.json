{
  "name": "sablier-subgraphs-solana",
  "version": "1.0.0",
  "description": "Official Sablier Subgraphs on Solana",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablier-labs/subgraphs-solana/issues"
  },
  "homepage": "https://github.com/sablier-labs/subgraphs-solana#readme",
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sablier-labs/subgraphs-solana.git"
  },
  "scripts": {
    "clean-generated": "rimraf substreams/$FEATURE/substreams.yaml",
    "g:local:run-subgraph": "./packages/infrastructure/graph-node/start.sh injective-mainnet https://mainnet.injective.streamingfast.io:443",
    "g:setup:lockup-devnet": "CLUSTER=devnet FEATURE=lockup yarn setup",
    "setup": "yarn clean-generated && yarn template",
    "template": "yarn template-substreams-yaml && yarn template-constants-rs",
    "template-constants-rs": "mustache ./packages/constants/src/addresses/$CLUSTER.json ./substreams/$FEATURE/src/constants/mod.template.mustache > ./substreams/$FEATURE/src/constants/mod.rs",
    "template-substreams-yaml": "mustache ./packages/constants/src/addresses/$CLUSTER.json ./substreams/$FEATURE/substreams.template.mustache > ./substreams/$FEATURE/substreams.yaml"
  },
  "devDependencies": {
    "mustache": "^4.2.0",
    "rimraf": "^5.0.7"
  }
}
