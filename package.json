{
  "name": "sablier-subgraphs-solana",
  "version": "1.0.0",
  "description": "Official Sablier Subgraphs on Solana",
  "author": {
    "name": "Sablier Labs Ltd",
    "url": "https://sablier.com"
  },
  "bugs": {
    "url": "https://github.com/sablier-labs/subgraphs-solana/issues"
  },
  "homepage": "https://github.com/sablier-labs/subgraphs-solana#readme",
  "license": "LGPL-3.0",
  "packageManager": "yarn@3.3.1",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/sablier-labs/subgraphs-solana.git"
  },
  "scripts": {
    "g:setup:devnet": "CLUSTER=devnet yarn setup",
    "g:gui:devnet": "CLUSTER=devnet SF=devnet.sol.streamingfast.io:443 yarn substreams-gui",
    "g:run:devnet": "CLUSTER=devnet SF=devnet.sol.streamingfast.io:443 yarn substreams-run",
    "substreams-gui": "yarn setup && substreams gui -e $SF",
    "substreams-run": "yarn setup && substreams run -e $SF ./substreams.yaml -o JSON",
    "clean-generated": "rimraf substreams.yaml src/constants/mod.rs",
    "setup": "yarn clean-generated && yarn template && substreams build",
    "template": "yarn template-substreams-yaml && yarn template-constants-rs",
    "template-constants-rs": "mustache ./constants/src/addresses/$CLUSTER.json ./src/constants/mod.template.mustache > ./src/constants/mod.rs",
    "template-substreams-yaml": "mustache ./constants/src/addresses/$CLUSTER.json ./substreams.template.mustache > ./substreams.yaml"
  },
  "devDependencies": {
    "mustache": "^4.2.0",
    "rimraf": "^5.0.7"
  }
}
